<!DOCTYPE html>
<html>
<head>
    <title>Profile - <%= user.custom_username %></title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1>Profile of <%= user.custom_username %></h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><%= user.username %></h5>
                <p class="card-text"><%= user.description || 'No description' %></p>
                <div class="mt-3">
                    <h6>Social Links:</h6>
                    <ul class="list-unstyled">
                        <% if (user.social_links) { %>
                            <% Object.keys(user.social_links).forEach(platform => { %>
                                <li>
                                    <a href="<%= user.social_links[platform] %>" target="_blank">
                                        <%= platform.charAt(0).toUpperCase() + platform.slice(1) %>
                                    </a>
                                </li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>
                <div class="mt-3">
                    <p>Views: <%= user.views %></p>
                    <% if (user.discord_id) { %>
                        <p>Discord ID: <%= user.discord_id %></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
